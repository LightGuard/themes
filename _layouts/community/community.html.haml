!!! 5
%html(lang="en")
	%head
		%title #{page.title} || #{site.defaults.title}
		%meta(charset="utf-8")
		%meta(name="viewport" content="width=device-width, initial-scale=1.0")
		%meta(name="description" content="")
		%meta(name="author" content="")

		%link(href="#{site.theme_css_url}/bootstrap-#{page.style}.css" rel="stylesheet" media="screen")

		/ HTML5 shim, for IE6-8 support of HTML5 elements
		/[if lt IE 9]
			%script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")

		/ Fav and touch icons
		%link(rel="shortcut icon" href="#{site.theme_images_url}/common/favicon.ico")
		%link(rel="apple-touch-icon-precomposed" sizes="144x144" href="#{site.theme_images_url}/community/jboss-touch-icon-144-precomposed.png")
		%link(rel="apple-touch-icon-precomposed" sizes="114x114" href="#{site.theme_images_url}/community/jboss-touch-icon-114-precomposed.png")
		%link(rel="apple-touch-icon-precomposed" sizes="72x72" href="#{site.theme_images_url}/community/jboss-touch-icon-72-precomposed.png")
		%link(rel="apple-touch-icon-precomposed" href="#{site.theme_images_url}/community/jboss-touch-icon-57-precomposed.png")

	%body
		.container
			.globalbanner
				.socialmedia
					%ul
						%li<
							%a(href="#{site.links.asylum}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_asylum.png")
						%li<
							%a(href="#{site.links.planet}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_planet.png")
						%li<
							%a(href="#{site.links.vimeo}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_vimeo.png")
						%li<
							%a(href="#{site.links.youtube}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_youtube.png")
						%li<
							%a(href="#{site.links.linkedIn}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_linkedin.png")
						%li<
							%a(href="#{site.links.twitter}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_twitter.png")
						%li<
							%a(href="#{site.links.facebook}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_facebook.png")
						%li<
							%a(href="#{site.links.googleplus}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_googleplus.png")
						%li<
							%a(href="#{site.links.contact}")<
								%img(src="#{site.theme_images_url}/common/socialmedia_icon16_email.png")
				.globalbrand
					%a(href="http://www.jboss.org")<
						%img(src="#{site.theme_images_url}/common/jbosscommunitylogo_large.png")
			.navbar#navbar-fix
				.navbar-inner
					.container
						%a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse" style="margin-top: 2px;") menu

						.nav-collapse
							%ul.nav
								%li.active<
									%a(href="#{site.links.home}") Home
								%li.dropdown
									%a.dropdown-toggle(data-toggle="dropdown" href="#Developers")<
										=precede 'Developers ' do
											%b.caret>
									%ul.dropdown-menu
										%li<
											%a(href="#{site.links.getStarted}") Get Started
										%li<
											%a(href="#{site.links.getToolKit}") Get Tool Kit (JBDS)
										%li<
											%a(href="#{site.links.downloads}") Downloads                
										%li<
											%a(href="#{site.links.documentation}") Documentation                
										%li<
											%a(href="#{site.links.forums}") Forums                
										%li<
											%a(href="#{site.links.webinars}") Webinars                
										%li<
											%a(href="#{site.links.events}") Events                
										%li<
											%a(href="#{site.links.articles}") Articles                
										%li<
											%a(href="#{site.links.books}") Books                
								%li.dropdown
									%a.dropdown-toggle(data-toggle="dropdown" href="#Contributors")<
										=precede 'Contributors ' do
											%b.caret>
									%ul.dropdown-menu
										%li<
											%a(href="#{site.links.getInvolved}") Get Involved
										%li<
											%a(href="#{site.links.wiki}") Wiki
										%li<
											%a(href="#{site.links.discussions}") Discussions                
										%li<
											%a(href="#{site.links.issueTracker}") Issue Tracker                
										%li<
											%a(href="#{site.links.sourceRepos}") Source Repositories                
										%li<
											%a(href="#{site.links.userGroups}") User Groups                
										%li<
											%a(href="#{site.links.sigs}") Special Interest Groups                
										%li<
											%a(href="#{site.links.reportSecurityIssue}") Report a Security Issue                
								%li.dropdown
									%a.dropdown-toggle(data-toggle="dropdown" href="#Projects")<
										=precede 'Projects ' do
											%b.caret>
									%ul.dropdown-menu
										%li<
											%a(href="#{site.links.appServer}") Application Server
										%li<
											%a(href="#{site.links.webServer}") Web Server                
										%li<
											%a(href="#{site.links.gateIn}") GateIn                
										%li<
											%a(href="#{site.links.esb}") ESB                
										%li<
											%a(href="#{site.links.drools}") Drools                
										%li<
											%a(href="#{site.links.hibernate}") Hibernate                
										%li<
											%a(href="#{site.links.richfaces}") RichFaces               
										%li<
											%a(href="#{site.links.tools}") Tools               
										%li<
											%a(href="#{site.links.rhq}") RHQ
										%li.divider
										%li<
											%a(href="#{site.links.projects}") More...               
								%li.dropdown
									%a.dropdown-toggle(data-toggle="dropdown" href="#Products")<
										=precede 'Products ' do
											%b.caret>
									%ul.dropdown-menu
										%li<
										%a(href="#{site.links.appPlatform}") Application Platform
										%li<
											%a(href="#{site.links.webPlatform}") Web Platform                
										%li<
											%a(href="#{site.links.portalPlatform}") Portal Platform                
										%li<
											%a(href="#{site.links.soaPlatform}") SOA Platform                
										%li<
											%a(href="#{site.links.brms}") Business Rules Mgmt System                
										%li<
											%a(href="#{site.links.dataServicesPlatform}") Data Services Platform                
										%li<
											%a(href="#{site.links.wfk}") Web Framework Kit               
										%li<
											%a(href="#{site.links.devStudio}") Developer Studio               
										%li<
											%a(href="#{site.links.operationsNetwork}") Operations Network
										%li.divider
										%li<
											%a(href="#{site.links.products}") More...
							%ul.nav.pull-right
								%li
									%form.navbar-search
										%input.search-query#communitysearch(type="text" placeholder="Search")
								%li.divider-vertical
								%li
									.btn-group
										%a.btn.btn-info.btn-small.dropdown-toggle(data-toggle="dropdown" href="#LogInRegister")
											=succeed ' Log In | Register' do
												%i.icon-user
											%span.caret
										%ul.dropdown-menu
											%li<
												%a(href="#") Log In
											%li<
												%a(href="#") Register
											%li.divider
											%li<
												%a(href="#") Forgot Username
											%li<
												%a(href="#") Forgot Password

			~ content

		.company
			%a(href="http://www.redhat.com/products/jbossenterprisemiddleware/")<
				%img(src="#{site.theme_images_url}/common/redhat_logo.png")
				
		/ ==========================JavaScript========================
		/ Placed at the end of the document so the pages load faster
		%script(src="#{site.theme_js_url}/jquery.js")
		%script(src="#{site.theme_js_url}/bootstrap-community.js")
