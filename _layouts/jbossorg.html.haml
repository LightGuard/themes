!!! 5
%html(lang="en")
	%head
		%title #{page.title}
		%meta(charset="utf-8")
		%meta(name="viewport" content="width=device-width, initial-scale=1.0")
		%meta(name="description" content="")
		%meta(name="author" content="")

		/ Styles
		%link(href="#{site.base_url}/#{site.cssDir}/fonts.css" rel="stylesheet")
		%link(href="#{site.base_url}/#{site.cssDir}/prettify.css" rel="stylesheet")
		%link(href="#{site.base_url}/#{site.cssDir}/#{page.style}/styles.css" rel="stylesheet")

		/ HTML5 shim, for IE6-8 support of HTML5 elements
		/[if lt IE 9]
			%script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")

		/ Fav and touch icons
		%link(rel="shortcut icon" href="#{site.base_url}/#{site.imgDir}/favicon.ico")
		%link(rel="apple-touch-icon-precomposed" sizes="144x144" href="#{site.base_url}/#{site.imgDir}/apple-touch-icon-144-precomposed.png")
		%link(rel="apple-touch-icon-precomposed" sizes="114x114" href="#{site.base_url}/#{site.imgDir}/apple-touch-icon-114-precomposed.png")
		%link(rel="apple-touch-icon-precomposed" sizes="72x72" href="#{site.base_url}/#{site.imgDir}/apple-touch-icon-72-precomposed.png")
		%link(rel="apple-touch-icon-precomposed" href="#{site.base_url}/#{site.imgDir}/apple-touch-icon-57-precomposed.png")

	%body.preview(data-spy="scroll" data-target=".subnav" data-offset="80")

		/ =========================Project Banner=========================
		.container
			.banner
				%a(href="http://www.jboss.org/tools")<
					%img(src="/images/trademarks/project-banner-1180px.png")
				.tagline.visible-desktop Eclipse plugins for JBoss technology
				.tab
					%a(href="http://www.jboss.org")<
						%img(src="/images/trademarks/jbosscommunity_tab.png")
						
			~ content

		/ =========================Company Logo=========================
		.company
			%a(href="http://www.redhat.com/products/jbossenterprisemiddleware/")<
				%img(src="/images/trademarks/redhat_logo.png")
			
		/ =========================JavaScript=========================
		/ Placed at the end of the document so the pages load faster
		%script(type="text/javascript" src="http://platform.twitter.com/widgets.js")
		%script(src="#{site.base_url}/#{site.jsDir}/jquery.js")
		%script(src="#{site.base_url}/#{site.jsDir}/prettify.js") 
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-transition.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-alert.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-modal.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-dropdown.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-scrollspy.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-tab.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-tooltip.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-popover.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-button.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-collapse.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-carousel.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-typeahead.js")
		%script(src="#{site.base_url}/#{site.jsDir}/bootstrap-affix.js")
		%script(src="#{site.base_url}/#{site.jsDir}/application.js") 
		%script(src="#{site.base_url}/#{site.jsDir}/subnavstick.js")
		